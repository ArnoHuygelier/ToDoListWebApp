@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-content-center">
    <div class="text-center">
        <h1 class="display-4 mb-3">
            Welcome to the Todo list web app.
        </h1>
        <p>
            This website allows you to easily store, track, and manage all your tasks in one place.
        </p>
        <div class="mt-3">
            <a class="btn btn-primary" asp-controller="Todo" asp-action="Index">Make your first todo!</a>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <div class="card border-0" style="width: 22rem;">
@*                 <img class="card-img-top" src="img/Image.png" alt="Working persons" /> *@
            </div>
        </div>
    </div>
</div>

<section class="container mt-5">
    <h2 class="text-center mb-4">App Features</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <h5 class="card-title">Task Management</h5>
                    <p class="card-text">Add, edit, and delete tasks easily to keep track of your to-dos.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <h5 class="card-title">Task List</h5>
                    <p class="card-text">Keep an overview of all your tasks and mark them as completed when done.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <h5 class="card-title">Reminders</h5>
                    <p class="card-text">Set reminders for important tasks to never miss a deadline.</p>
                </div>
            </div>
        </div>
    </div>
</section>

